---
const { data, cover, note } = Astro.props;
---

{cover && (
    <figure class="w-full max-w-[25rem] overflow-hidden shadow-lg shadow-[var(--shadow-base)] rounded-lg mx-auto bg-[var(--bg-card)]">
        <img src={cover} alt={data.title} loading="lazy" decoding="async" class="w-full h-auto object-cover" />
        {note && <figcaption class="p-2 italic text-[var(--text-primary)] text-sm text-center">{note}</figcaption>}
    </figure>
)}