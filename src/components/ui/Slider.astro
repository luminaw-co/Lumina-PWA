---
import MiniCard from "@/components/ui/MiniCard.astro";
import Container from "@/components/ui/Container.astro";

const src = "/icons/illustrations/highlights/";
const cards = [
	{
		text: "Estudio todos los días como si fuera un trabajo real.",
		icon: `${src}coding.svg`,
	},
	{
		text: "Soy autodidacta y llevo mi formación como si fuera un bootcamp.",
		icon: `${src}target.svg`,
	},
	{
		text: "Rindo más por la mañana después de mi rutina personal.",
		icon: `${src}sunrise.svg`,
	},
	{
		text: "Me gusta probar lo que aprendo con proyectos reales, no solo teoría.",
		icon: `${src}user-research.svg`,
	},
];
---

<section
	aria-label="Slider de mini tarjetas"
	class="slider-cards [&::-webkit-scrollbar-thumb]:bg-[var(--brand-blue)]/50 hover:[&::-webkit-scrollbar-thumb]:bg-[var(--brand-blue)]/70"
	style="scrollbar-gutter: stable;"
	role="list"
>
	{
		cards.map((card) => (
			<Container class="shrink-0 w-[320px] snap-start" role="listitem">
				<MiniCard text={card.text} icon={card.icon} />
			</Container>
		))
	}
</section>
