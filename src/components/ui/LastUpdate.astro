---
import { execSync } from "child_process";

const TIMEZONE = "America/Bogota";

let lastUpdated = "";
try {
	const iso = execSync("git log -1 --format=%cI -- .", {
		encoding: "utf8",
	}).trim();
	const date = iso ? new Date(iso) : new Date();
	lastUpdated = date.toLocaleString("es-ES", {
		dateStyle: "medium",
		timeStyle: "short",
		timeZone: TIMEZONE,
	});
} catch {
	lastUpdated = new Date().toLocaleString("es-ES", {
		dateStyle: "medium",
		timeStyle: "short",
		timeZone: TIMEZONE,
	});
}
---

<p class="text-[var(--text-primary)] text-center text-sm mt-5">
	Última actualización: {lastUpdated}
</p>
