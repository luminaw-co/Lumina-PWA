---
import PortfolioLayout from "@/layouts/PortfolioLayout.astro";
import Hero from "@/components/portfolio/home/Hero.astro";
import LabPreview from "@/components/portfolio/home/LabPreview.astro";
import AboutPreview from "@/components/portfolio/home/AboutPreview.astro";
import CtaContact from "@/components/portfolio/home/CtaContact.astro";
import "@/styles/global.css";

const labProjects = [
	{
		title: "Ubuntu",
		slug: "ubuntu",
		cover: "/images/projects/ubuntu /icon.svg",
		alt: "Icono de la marca Ubuntu",
		href: "/portfolio/projects/ubuntu",
		links: {
			site: "#",
			github: "https://github.com/wavival/Ubuntu",
		},
	},
];
---

<PortfolioLayout title="@wavival Portfolio">
	<Hero />

	<LabPreview projects={labProjects} id="projects" />
	<AboutPreview id="about" />
	<CtaContact />
</PortfolioLayout>
